# ITSON FSM Platform - Development Environment Variables
# Copy this file to .env for local development

# =============================================================================
# FRONTEND (VITE)
# =============================================================================

VITE_API_BASE_URL=http://localhost:5000
VITE_USE_MOCK_API=true
VITE_AI_PROVIDER=claude
VITE_ENABLE_BIOMETRIC_AUTH=true
VITE_ENABLE_OFFLINE_MODE=true

# Leave these empty for local development (will use mock mode)
VITE_ANTHROPIC_API_KEY=
VITE_OPENAI_API_KEY=

# =============================================================================
# BACKEND (Node.js/Express)
# =============================================================================

NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Local PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/itson_fsm_dev
DATABASE_SSL=false

# JWT Secret (change this)
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# WhatsApp (optional for local dev)
WHATSAPP_VERIFY_TOKEN=dev-verify-token
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# File uploads (local storage)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug

# =============================================================================
# QUICK START
# =============================================================================
#
# 1. Install PostgreSQL locally
# 2. Create database: createdb itson_fsm_dev
# 3. Copy this file: cp .env.example .env
# 4. Install dependencies: npm install
# 5. Run migrations: npm run migrate:latest
# 6. Start backend: cd server && npm run dev
# 7. Start frontend: npm run dev
# 8. Access app: http://localhost:5173
#
# Demo credentials:
# - admin@itsonfsm.com / password123
# - manager@itsonfsm.com / password123
# - supervisor@itsonfsm.com / password123
#
# =============================================================================
